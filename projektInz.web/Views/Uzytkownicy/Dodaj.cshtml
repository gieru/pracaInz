@model projektInz.web.Models.NowyUzytkownik

@{
    ViewBag.Title = "Dodaj użytkownika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodaj produkt</h2>
@using (Html.BeginForm("Dodaj", "Uzytkownicy", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Login)
        @Html.TextBoxFor(m => m.Login, new { @class = "form-control", placeholder = "Wprowadź login" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Imie)
        @Html.TextBoxFor(m => m.Imie, new { @class = "form-control", placeholder = "Wprowadź imię" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Nazwisko)
        @Html.TextBoxFor(m => m.Nazwisko, new { @class = "form-control", placeholder = "Wprowadz nazwisko" })
    </div>
    <input type="submit" class="btn btn-default" value="Dodaj" />
}
