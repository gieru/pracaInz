@model System.Collections.Generic.List<projektInz.web.Models.WidokZamowienia>

@{
    ViewBag.Title = "Zamówienia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2>Zamówienia</h2>

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Numer</th>
                        <th>Ilość pozycji</th>
                        <th>Wartość</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var zamowienie in this.Model)
                    {
                        <tr>
                            <td>@zamowienie.Numer</td>
                            <td>@zamowienie.IloscPozycji</td>
                            <td>@zamowienie.Wartosc</td>
                            <td>@Html.ActionLink("Edytuj","EdytujZamowienie",new { id = zamowienie.Id })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @Html.ActionLink("Dodaj","DodajZamowienie")
    </div>
</div>

