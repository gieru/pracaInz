@model projektInz.web.Models.WidokRólUżytkownika

@{
    ViewBag.Title = "EdytujRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edytuj role użytkownika @Model.NazwaWyświetlana</h2>

@using (Html.BeginForm("EdytujRole", "Role", FormMethod.Post))
{
    Html.ValidationSummary(true);
    <ul>
        @foreach (var rola in Model.Role)
        {
            <li>
                <label>
                    @if (rola.CzyMoznaEdytowac)
                    {
                        @Html.CheckBox("Role[" + rola.Nazwa + "]", rola.CzyMaRole)
                    }
                    @rola.Nazwa
                </label>

            </li>
        }
    </ul>
    @Html.Hidden("Id", Model.Id)
    @Html.Hidden("Login", Model.Login)
    <p>
        <input type="submit" value="Save" />
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
