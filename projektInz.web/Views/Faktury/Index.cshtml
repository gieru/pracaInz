@model projektInz.web.Models.FakturyKlienta

@{
    ViewBag.Title = "Faktury klienta "+Model.Nazwa + " ("+Model.Identyfikator + ")";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2>Faktury klienta @Model.Nazwa (@Model.Identyfikator)</h2>

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Numer</th>
                        <th>Ilość pozycji</th>
                        <th>Wartość netto</th>
                        <th>Wartość brutto</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var faktura in this.Model.Faktury)
                    {
                        <tr>
                            <td>@faktura.Numer</td>
                            <td>@faktura.IloscPozycji</td>
                            <td>@faktura.WartoscNetto</td>
                            <td>@faktura.WartoscBrutto</td>
                            <td>@Html.ActionLink("Drukuj","Drukuj",new { id = faktura.Id},new { target="_blank" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

