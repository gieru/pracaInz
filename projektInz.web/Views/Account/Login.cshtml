@model projektInz.web.Models.LoginModel

@{
    ViewBag.Title = "Panel Logowania";
}

<hgroup class="title">
    <h1 class="text-center">@ViewBag.Title</h1>
</hgroup>

    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(m => m.UserName, "Podaj Login")
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Nazwa użytkownika"})
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Podaj hasło")
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Hasło"})
            @Html.ValidationMessageFor(m => m.Password)
        </div> 
        <input type="submit" class="btn btn-lg btn-success btn-block" value="Zaloguj" />
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}