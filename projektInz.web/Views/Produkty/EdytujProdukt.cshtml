@model projektInz.web.Models.WidokProduktu

@{
    ViewBag.Title = "Edytuj produkt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edytuj produkt</h2>

@using (Html.BeginForm("EdytujProdukt", "Produkty", FormMethod.Post, new {role = "form"} ))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    
    <div class="form-group">
        @Html.HiddenFor(m => m.Id)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Nazwa)
        @Html.TextBoxFor(m => m.Nazwa, new { @class = "form-control", placeholder = "Wprowadź nazwę" })
    </div>    
    
     <div class="form-group">
        @Html.LabelFor(m => m.Grupa)
        @Html.TextBoxFor(m => m.Grupa,new { @class = "form-control", placeholder = "Wprowadź nazwę grupy towaru" })  
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Stan)
        @Html.TextBoxFor(m => m.Stan,new { @class = "form-control", placeholder = "Wprowadź stan" }) 
    </div>    
    
    <div class="form-group">
        @Html.LabelFor(m => m.StawkaVat, "Stawka VAT w %")
        @Html.TextBoxFor(m => m.StawkaVat,new { @class = "form-control", placeholder = "Wprowadź stawkę VAT" }) 
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.CenaZakupuNetto, "Cena Zakupu")
        @Html.TextBoxFor(m => m.CenaZakupuNetto,new { @class = "form-control", placeholder = "Wprowadź cene zakupu towaru netto" })
    </div>   
      <div class="form-group">
        @Html.LabelFor(m => m.Marza, "Marża w %")
        @Html.TextBoxFor(m => m.Marza,new { @class = "form-control", placeholder = "Wprowadź marżę" })
    </div> 
    <input type="submit" class="btn btn-info btn-circle btn-xl" value="+" />
}