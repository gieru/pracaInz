@model System.Collections.Generic.List<projektInz.web.Models.WidokProduktu>

@{
    ViewBag.Title = "Produkty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Produkty</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa Produktu</th>
                <th>Stan</th>
                <th>Cena Zakupu</th>
                <th>Cena Sprzedaży</th>
                <th>Data Wprowadzenia</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prod in this.Model)
            {
                <tr>
                    <td>@prod.Id</td>
                    <td>@prod.Nazwa</td>
                    <td>@prod.Stan</td>
                    <td>@prod.CenaZakupu</td>
                    <td>@prod.CenaSprzedazy</td>
                    <td>@prod.DataWprowadzenia</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<ul>
    @foreach (var prod in this.Model)
    {
        <li>@prod.Nazwa </li>
        <li>@prod.Stan </li>
        <li>@prod.CenaZakupu </li>
        <li>@prod.CenaSprzedazy </li>
        <li>(@prod.DataWprowadzenia) </li>
        <li>@Html.ActionLink("Edytuj","EdytujProdukt",new { id = prod.Id })</li>
    }
</ul>

@Html.ActionLink("Dodaj","DodajProdukt")

