@model System.Collections.Generic.List<projektInz.web.Models.WidokKlienta>

@{
    ViewBag.Title = "Klienci";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Klienci</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Pesel/NIP</th>
                <th>Adres</th>
                <th>Nr. Telefonu</th>
                <th>E-mail</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var klient in this.Model)
            {
                <tr>
                    <td>@klient.Nazwa</td>
                    <td>@klient.PeselNip</td>
                    <td>@klient.Adres</td>
                    <td>@klient.NrTel</td>
                    <td>@klient.Email</td>
                    <td>
                        @Html.ActionLink("Edytuj", "EdytujKlienta", new { id = klient.Id }) |
                        @Html.ActionLink("Nowe zamówienie", "DodajZamowienie", "Zamowienia", new { id = klient.Id }, null) |
                        @Html.ActionLink("Faktury", "Index", "Faktury", new { id = klient.Id }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@Html.ActionLink("Dodaj","DodajKlienta")
    