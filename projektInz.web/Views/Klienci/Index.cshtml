@model System.Collections.Generic.List<projektInz.web.Models.WidokKlienta>

@{
    ViewBag.Title = "Klienci";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Klienci</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Nazwa Firmy</th>
                <th>Adres</th>
                <th>Nip</th>
                <th>Nr. Telefonu</th>
                <th>E-mail</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var klient in this.Model)
            {
                <tr>
                    <td>@klient.Imię</td>
                    <td>@klient.Nazwisko</td>
                    <td>@klient.NazwaFirmy</td>
                    <td>@klient.Adres</td>
                    <td>@klient.Nip</td>
                    <td>@klient.NrTel</td>
                    <td>@klient.Email</td>
                    <td>@Html.ActionLink("Edytuj", "EdytujKontrahent", new { id = klient.Id })</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@Html.ActionLink("Dodaj","DodajKontrahenta")
    